<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.playground.ble.ui.devices.DevicesFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_devices">

        <action
            android:id="@+id/action_devices_select_device"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.playground.ble.ui.devicedetails.DeviceDetailsFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_device_details">

        <argument
            android:name="deviceMacAddress"
            android:defaultValue=""
            app:argType="string" />

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
</navigation>